<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sviostali.e_dnevnik.Register">

    <EditText
        android:id="@+id/etRFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Ime"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etRLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRFName"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Prezime"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etRUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRLName"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etRPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etRUsername"
        android:ems="10"
        android:hint="Lozinka"
        android:inputType="numberPassword"
        android:maxLength="8" />

    <EditText
        android:id="@+id/etRPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etRPassword1"
        android:layout_alignStart="@+id/etRPassword1"
        android:layout_below="@+id/etRPassword1"
        android:ems="10"
        android:hint="Lozinka ponovo"
        android:inputType="numberPassword"
        android:maxLength="8" />

    <EditText
        android:id="@+id/etRDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRPassword2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Datum rodjenja"
        android:inputType="datetime" />

    <Button
        android:id="@+id/btnRRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etRDateOfBirth"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Registracija" />

    <Button
        android:id="@+id/btnRReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Očisti"
        android:layout_alignBaseline="@+id/btnRRegister"
        android:layout_alignBottom="@+id/btnRRegister"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etRAdminKod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:hint="Admin kod"
        android:inputType="textPassword" />

</RelativeLayout>
